{
  "kind": "collectionType",
  "collectionName": "heroes",
  "info": {
    "name": "hero"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "regex": ","
    },
    "description": {
      "type": "text",
      "required": true
    },
    "hero_avatar": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    }
  }
}
